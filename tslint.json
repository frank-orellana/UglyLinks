{

    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    },
    "rules": {
        "typedef": [
            true,
            "variable-declaration"
        ],
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    }
}